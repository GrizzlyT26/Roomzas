<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyApplication" parent="android:Theme.Material.Light.NoActionBar" />
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="colorPrimary">@color/lightblue</item>
        <item name="colorPrimaryVariant">@color/lightblue</item>
        <item name="colorOnPrimary">@color/lightblue</item>

    </style>
    <style name="Theme.AppCompat.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/lightblue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/house_logo</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.MyApplication</item>
    </style>

    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/black</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:foreground">#99FFFFFF</item>
    </style>

    <style name="NotificationSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/black</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:foreground">#99FFFFFF</item>
    </style>

    <style name="PrivateSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/black</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:foreground">#99FFFFFF</item>
    </style>
</resources>